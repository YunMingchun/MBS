extends template

block links
    link(rel='stylesheet', href='/stylesheets/home.css')
block body
    div#home(ng-controller='homeCtrl')
        menu
        div#intro-pic
            img(src='/images/introPic.jpg')
            a.btn.get-started(ng-if='display_mode == "visitor"',href='/login') Get Started
        div#posts-display
            div#posts-latest
                div.header
                    img(src='/images/latestPic.jpg')
                    span.tip Latest
                div.list
            div#posts-trending
                div.header
                    img(src='/images/trendingPic.jpg')
                    span.tip Latest
                div.list
            div#posts-featured
                div.header
                    img(src='/images/featuredPic.jpg')
                    span.tip Latest
                div.list
            div.clear
block scripts