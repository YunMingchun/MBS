extends ../template

block links
    link(rel='stylesheet',href='/stylesheets/blog.css')

block body
    blog-header
    div#blogs-display(ng-controller='blogDisplayCtrl')
        div.head
            h3.title(ng-bind='post.title')
            span.create-time(ng-bind='post.createTime')
            span.privacy(ng-bind='post.privacy | privacy')
            div.clear
            span.tags(ng-bind='post.tags')
            p.abstract(ng-bind='post.abstract')
        div.body
            div.content(ng-bind-html='post.content')
        div.btns
            a.btn(ng-click='editPost(post._id)')
                i.fa.fa-pencil.fa-fw
                span &nbsp;Edit
            a.btn(ng-click='deletePost(post._id)')
                i.fa.fa-trash-o.fa-fw
                span &nbsp;Delete
block scripts