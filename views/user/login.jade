extends ../template

block links
   link(rel='stylesheet',href='/stylesheets/login.css')
block body
   div#login(ng-controller='loginCtrl')
      div#login-form
         div#userName.form-group
            input.form-control(type='text' placeholder='请输入用户名' ng-model='userName')
         div#password.form-group
            input.form-control(type='password' placeholder='请输入密码' ng-model='password')
      div.btns
         a.btn.login-btn(ng-click='signin()') 登陆
         a.btn.register-btn(ng-click='signup()') 注册
block scripts
