header#directive-blog-header
    span.title MBS
    ul.nav
        li.item(ng-click='back2Home()') HOME
        li.item
            span(ng-click='isBlogNavDisplay=!isBlogNavDisplay') BLOG
            i.fa.fa-caret-down
            ul.sub-nav(ng-show='isBlogNavDisplay')
                li.item(ng-click='jump2Other("add")') ADD
                li.item(ng-click='jump2Other("list")') LIST
                li.item(ng-click='jump2Other("draft")') DRAFT
        div.clear
    div.clear