header#directive-blog-header
    span.title MBS
    ul.nav
        li.item(ng-click='back2Home()') HOME
        li.item
            span(ng-click='isBlogNavDisplay=!isBlogNavDisplay') BLOG
            i.fa.fa-caret-down
            ul.sub-nav(ng-show='isBlogNavDisplay')
                li.item(ng-click='jump2Other("add")')
                    i.fa.fa-pencil.fa-fw
                    span &nbsp;ADD
                li.item(ng-click='jump2Other("list")')
                    i.fa.fa-book.fa-fw
                    span &nbsp;LIST
        div.clear
    div.clear